@model List<DAL.Entities.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        @{if (TempData["info"] != null)
            {
                <div class="alert alert-success alert-block fade in">
                    <button data-dismiss="alert" class="close close-sm" type="button">
                        <i class="icon-remove"></i>
                    </button>
                    <h4>
                        <i class="icon-ok-sign"></i>
                        Başarılı!
                    </h4>
                    <p>@TempData["info"]</p>
                </div>
            }
            else if (TempData["error"] != null)
            {
                <div class="alert alert-danger alert-block fade in">
                    <button data-dismiss="alert" class="close close-sm" type="button">
                        <i class="icon-remove"></i>
                    </button>
                    <h4>
                        <i class="icon-remove"></i>
                        Hata!
                    </h4>
                    <p>@TempData["error"]</p>
                </div>
            }

        }
        <section class="panel">
            <header class="panel-heading">
                <div class="row">
                    <div class="col-md-9">
                        <h2>Film Listesi</h2>
                    </div>
                    <div class="col-md-3 ">

                        @Html.ActionLink("Film Ekle", "Create", null, new { @class = "btn btn-success pull-right" })
                    </div>
                </div>
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th>Film Adı</th>
                        <th>Açıklama</th>
                        <th>Süre</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(movie.MovieName, "Movie", new { id = movie.Id })

                            </td>
                            <td>@movie.Description</td>
                            <td>@movie.Duraction</td>

                            <td>
                                <a href="/Admin/Movie/Update/@movie.Id" class="btn btn-primary btn-xs">
                                    <i class="icon-pencil"></i>
                                </a>
                                <a href="/Admin/Movie/Delete/@movie.Id" class="btn btn-danger btn-xs">
                                    <i class="icon-trash"></i>


                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>


@model List<DAL.Entities.MovieCategory>
   
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-6">
    <section class="panel">
        <header class="panel-heading">
            Gösterim Ekle
        </header>
        <div class="panel-body">
            <form role="form" method="post">
                <div class="form-group">
                    <label>Film Adı</label>
                    <select name="MovieId" class="form-control m-bot15">
                        @foreach (var movie in (List<DAL.Entities.Movie
              >)ViewBag.Movie)
                        {
                            <option value="@movie.Id">@movie.MovieName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Kategori Adı</label>
                    <select name="CategoryId" class="form-control m-bot15">
                  @foreach (var category in (List<DAL.Entities.Category
        >)ViewBag.Category)
                  {
                      <option value="@category.Id">@category.CategoryName</option>
                  }
              </select>

                </div>
                

                <button type="submit" class="btn btn-info">Kaydet</button>
            </form>

        </div>
    </section>
</div>






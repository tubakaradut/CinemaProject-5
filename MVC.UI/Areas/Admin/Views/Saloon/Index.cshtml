
@model List<DAL.Entities.Saloon>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        @{if (TempData["info"] != null)
            {
                <div class="alert alert-success alert-block fade in">
                    <button data-dismiss="alert" class="close close-sm" type="button">
                        <i class="icon-remove"></i>
                    </button>
                    <h4>
                        <i class="icon-ok-sign"></i>
                        Başarılı!
                    </h4>
                    <p>@TempData["info"]</p>
                </div>
            }
            else if (TempData["error"] != null)
            {
                <div class="alert alert-danger alert-block fade in">
                    <button data-dismiss="alert" class="close close-sm" type="button">
                        <i class="icon-remove"></i>
                    </button>
                    <h4>
                        <i class="icon-remove"></i>
                        Hata!
                    </h4>
                    <p>@TempData["error"]</p>
                </div>
            }

        }
        <section class="panel">
            <header class="panel-heading">
                <div class="row">
                    <div class="col-md-9">
                        <h2>Salon Listesi</h2>
                    </div>
                    <div class="col-md-3 ">

                        @Html.ActionLink("Salon Ekle", "Create", null, new { @class = "btn btn-success pull-right" })
                    </div>
                </div>
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th>Salon Adı</th>
                        <th>Kapasite</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var salon in Model)
                    {
                    <tr>
                        <td>
                            @Html.ActionLink(salon.SaloonName, "Saloon", new { id = salon.Id })

                        </td>
                        <td>
                            @salon.Capacity
                        </td>
                        <td></td>

                        <td>
                            <a href="/Admin/Saloon/Update/@salon.Id" class="btn btn-primary btn-xs">
                                <i class="icon-pencil"></i>
                            </a>
                            <a href="/Admin/Saloon/Delete/@salon.Id" class="btn btn-danger btn-xs">
                                <i class="icon-trash"></i>


                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>




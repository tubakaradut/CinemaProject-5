@using DAL.Entities;

@model List<Movie>
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-9">
        <div class="row product-list">
            @foreach (var movie in Model)
            {


                <div class="col-md-4">
                    <section class="panel">
                        <div class="pro-img-box">
                          
                            <img src="https://st2.depositphotos.com/13194036/44748/i/600/depositphotos_447487454-stock-photo-close-view-bucket-popcorn-clapperboard.jpg" alt="">

                                @*@Html.ActionLink("Bilet Al", "AddToCart", new { id = movie.Id }, new { @class = "btn btn-dark mt-2" })*@
                        
                        </div>

                        <div class="panel-body text-center">
                            <h4>


                                @Html.ActionLink(movie.MovieName, "Details", "Movie", new { id = movie.Id }, new { @class = "pro-title" })
                            </h4>
                           
                            <p class="text-dark">@movie.Duration dakika</p>
                        </div>
                    </section>
                </div>
            }
        </div>
    </div>
</div>


@model DAL.Entities.Movie
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-6">
    <section class="panel">
        <header class="panel-heading">
            Film Güncelle
        </header>
        <div class="panel-body">
            <form role="form" method="post">
                <div class="form-group">
                    <label>Film Ad</label>
                    @Html.TextBoxFor(x => x.MovieName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Film Ad</label>
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Film Ad</label>
                    @Html.TextBoxFor(x => x.Duraction, new { @class = "form-control" })
                </div>

                <button type="submit" class="btn btn-info">Güncelle</button>
            </form>

        </div>
    </section>
</div>





